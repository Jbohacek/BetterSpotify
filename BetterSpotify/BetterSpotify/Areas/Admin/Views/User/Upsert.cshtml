@model User
@{
    ViewData["Title"] = "Upsert";
}


<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div>
        <div>
            <h2 class="display-3">User Edit</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mx-2 card p-3 shadow mb-4" style="background-color: #151515">
            <div class="display-6 mb-3">Personal Information</div>
            <div class="row">
                <div class="col">
                    <div class="form-floating mb-3">
                        <input asp-for="FirstName" type="text" class="form-control" id="floatingInput" placeholder=" ">
                        <label asp-for="FirstName" for="floatingInput" class="bla-text">First name</label>
                        <span asp-validation-for="FirstName"></span>
                    </div >
                </div>
                <div class="col">
                    <div class="form-floating mb-3">
                        <input asp-for="LastName" type="text" class="form-control" id="floatingInput" placeholder=" ">
                        <label asp-for="LastName" for="floatingInput" class="bla-text">Last name</label>
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-floating mb-3">
                        <input asp-for="DateOfBirth" type="date" class="form-control" id="floatingInput" placeholder=" ">
                        <label asp-for="DateOfBirth" for="floatingInput" class="bla-text">Date of Birth</label>
                        <span asp-validation-for="DateOfBirth"></span>
                    </div >
                </div>
                <div class="col">
                    <div class="form-floating mb-3">
                        <input asp-for="Country" type="text" class="form-control" id="floatingInput" placeholder=" ">
                        <label asp-for="Country" for="floatingInput" class="bla-text">Country</label>
                        <span asp-validation-for="Country"></span>
                    </div>
                </div>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label asp-for="Email" for="floatingInput" class="bla-text">Email address</label>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-floating mb-3">
                        <input asp-for="NickName" type="text" class="form-control" id="floatingInput" placeholder=" ">
                        <label asp-for="NickName" for="floatingInput" class="bla-text">Nickname</label>
                        <span asp-validation-for="NickName"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="text" class="form-control" id="floatingInput" placeholder=" ">
                        <label asp-for="Password" for="floatingInput" class="bla-text">Password</label>
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3 pt-2">
                        <input asp-for="ImageFile" name="File" type="file" class="form-control">
                        <span asp-validation-for="ImageFile"></span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="mx-2 card p-3 shadow" style="background-color: #151515">
            <div class="display-6 mb-3">System Information</div>
            <div class="row w-25 ms-3">
                <div class="col">
                    <div class="form-check mb-3">
                        <input asp-for="Verified" class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label asp-for="Verified" class="form-check-label" for="flexCheckDefault"></label>
                    </div >
                </div>
                <div class="col">
                    <div class="form-check mb-3">
                        <input asp-for="ActiveAccount" class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label asp-for="ActiveAccount" class="form-check-label" for="flexCheckDefault"></label>
                    </div >
                </div>
            </div>
            
        </div>
    </div>
</form>